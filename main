void los(int ilosc, int zakres)
{
    int* liczby = new int[ilosc];

    srand(time(0));

    for (int i = 0; i < ilosc; i++)
    {
        liczby[i] = (rand() % zakres) + 1;

        for (int j = 0; j < i; j++)
        {
            if (liczby[i] == liczby[j])
            {
                --i;
                break;
            }
        }


        for (int i = 0; i < ilosc; i++)
            printf("%d ", liczby[i]);

        printf("\n");

        delete[] liczby;
    }

}


