void tworzeniehasla(char haslo[9], char znaki[9], int iloscznakow[3]) {
    int x;
    //x = (a + (rand() % (b - a)))
    for (int i = 0; i < 9; i++) {
        while (true) {
            x = (rand() % 3);
            if (iloscznakow[x] > 0) {
                iloscznakow[x]--;
                switch (x)
                {
                case 0: //małe litery
                    haslo[i] = (97 + (rand() % (122 - 97)));
                    break;
                case 1: //duże litery
                    haslo[i] = (65 + (rand() % (90 - 65)));
                    break;
                case 2: //znaki
                    haslo[i] = znaki[(rand() % 8)];
                    break;
                default:
                    cout << "ERROR!!!";
                    break;
                }
                break; //break do while
            }
        }
    }
}


